---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  noLogo?: boolean;
}

const { noLogo, ...restProps } = Astro.props;
---

<a
  {...restProps}
  class="inline-flex items-center rounded-sm border border-neutral-200 bg-neutral-50 p-1 text-sm leading-4 text-neutral-900 no-underline dark:border-neutral-700 dark:bg-neutral-800 dark:text-neutral-100"
  rel="noopener noreferrer"
  target="_blank"
>
  {noLogo && <span class="h-4 mr-1" />}
  <slot />
</a>
